{
  "sModuleName": "Rhythmbox",
  "sType": "audio-player",
  "oAuthor":{
    "sName": "Patrick Gruber",
    "sHomepage": "http://gruber.fyi/"
  }
  "aNPMRequirements": [

  ],
  "aAPTRequirements": [
    "rhythmbox", "rhythmbox-client"
  ],
  "sDescription": "Control the Rhythmbox media player. TODO: finish!",
  "oCommands": {
    "play": "[] => Resume playback.",
    "pause": "[] => Pause playback.",
    "next": "[] => Play next song.",
    "previous": "[] => Play previous song.",
    "current-song": "[] => Return the current song.",
    "play-uri": "[] => Play a song given an URI.",
    "play-songs": "[] => Play multiple songs based on their URI's.",
    "search-songs": "[] => Search for songs in DB.",
    "clear-queue": "[] => Clear the queue.",
    "increment-volume": "[] => Increment the current volume.",
    "decrement-volume": "[] => Decrement the current volume.",
    "current-volume": "[] => Return the current volume.",
    "get-playlists": "[] => Get playlists from the DB.",
    "play-playlist": "[] => Play a playlist given a playlist.",
    "reload-db": "[] => Reload the DB."
  }
}
